# Environment variables for the Robotic Toy Chatbot project

# AWS Credentials (Ensure these are kept secure and not committed to Git)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# Speech Recognition
SPEECH_RECOGNITION_ENGINE=google
SPEECH_RECOGNITION_LANGUAGE=en-US

# Text-to-Speech (TTS)
TTS_ENGINE=pyttsx3
TTS_VOICE=default

# Face Recognition
FACE_RECOGNITION_ENABLE=true
FACE_RECOGNITION_KNOWN_FACES_PATH=./data/known_faces
CAMERA_INDEX=0

# Translation
TRANSLATION_ENGINE=google
DEFAULT_LANGUAGE=en

# Logging
LOG_LEVEL=DEBUG
